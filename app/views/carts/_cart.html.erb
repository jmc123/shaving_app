<% if cart.line_items.empty? %>
<%else%>
<h4>Your Cart</h4>
  <table>
  <%= render(cart.line_items) %>
  <tr class="total_line">
    <td colspan="2">Total</td>
    <td class="total_cell"><%= number_to_currency(cart.total_price, unit: "&euro;") %></td>
  </tr>
  </table>
  <p></p>
  <%= link_to raw('<b>Checkout</b>'), cart,  class: "btn btn-primary btn-small" %>

  <%= link_to raw('<b>Empty Cart</b>'), cart, remote: true, method: :delete, class: "btn btn-danger btn-small", confirm: "Are you sure you want to destroy your cart?" %>
<%end%>
