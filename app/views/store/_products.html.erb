<h4>Shaving Products</h4>
<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %></h3>
    <p><%= product.description %></p>
  <div class="price_line">
    <span class="price"><%= number_to_currency(product.price, unit: "&euro;") %></span>
    <% if user_signed_in? %>
    <%= link_to raw("<i class=\"icon-shopping-cart icon-white\"></i> <b>Add to Cart</b>"), line_items_path(product_id: product), remote: true, class: "btn btn-small btn-primary", method: :post %>
    <%else%>
    <%end%>    
  </div>
</div>
<% end %>
<div class="pagination-centered pagination-large">
<%= will_paginate @products, renderer: BootstrapPagination::Rails %>
</div>
